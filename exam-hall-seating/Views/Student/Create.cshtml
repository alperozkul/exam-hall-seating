@using exam_hall_seating.ViewModels;
@model CreateStudentViewModel

<form method="post" asp-action="Create">
    <div class="form-group col-md-3">
        <label asp-for="Number">Numara</label>
        <input asp-for="Number" class="form-control" placeholder="Numara">
        <span asp-validation-for="Number" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="FirstName">Ad</label>
        <input asp-for="FirstName"  class="form-control" placeholder="Ad">
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group col-md-3">
        <label asp-for="LastName">Soyad</label>
        <input asp-for="LastName" class="form-control" placeholder="Soyad">
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="Mail">Email</label>
        <input asp-for="Mail" class="form-control" placeholder="Mail">
        <span asp-validation-for="Mail" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="Phone">Telefon</label>
        <input asp-for="Phone" class="form-control" placeholder="Telefon">
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="form-group col-md-3">
        <label asp-for="DepartmentId"></label>
        <select asp-for="DepartmentId" asp-items="ViewBag.Departments" class="form-control">
            <option value="">-- Seçiniz --</option>
        </select>
        <span asp-validation-for="DepartmentId" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="Year">Yıl</label>
        <input asp-for="Year" class="form-control" placeholder="Yıl">
        <span asp-validation-for="Year" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="Period">Dönem</label>
        <input asp-for="Period" class="form-control" placeholder="Dönem">
        <span asp-validation-for="Period" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>