@model IEnumerable<Student>
@{
    ViewData["Title"] = "Öğrenci İşlemleri";
}
<a type="button" asp-controller="Student" asp-action="Create" class="btn btn-primary">Öğrenci Ekle</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Numara</th>
            <th scope="col">Ad</th>
            <th scope="col">Soyad</th>
            <th scope="col">Mail</th>
            <th scope="col">Telefon</th>
            <th scope="col">Yıl</th>
            <th scope="col">Dönem</th>
            <th scope="col">Bölüm</th>
            <th scope="col">İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @{
            var i = 1;
        }
        @foreach(var item in Model)
        {         
            <tr>
                <th scope="row">@i</th>
                <td>@item.Number</td>
                <td>@item.FirstName</td>
                <td>@item.LastName</td>
                <td>@item.Mail</td>
                <td>@item.Phone</td>
                <td>@item.Year</td>
                <td>@item.Period</td>
                <td>@item.Department.Name</td>
                <td>
                    <a type="button" asp-controller="Student" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Düzenle</a>
                    @*<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Sil</button>*@
                    <form method="post" action="/Student/Delete" onsubmit="return confirm('Öğrenciyi silmek istediğinize emin misiniz?');">
                        <input type="hidden" name="id" value="@item.Id"  />
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
            i++;
        }

        @*<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Dikkat</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Öğrenciyi silmek istediğinize emin misiniz?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                        <button type="button" class="btn btn-danger">Sil</button>
                    </div>
                </div>
            </div>
        </div>*@
        
    </tbody>
</table>