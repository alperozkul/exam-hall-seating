@using exam_hall_seating.ViewModels.ExamVM;
@model CreateExamViewModel


<form method="post" asp-action="Create">
    
    <div class="form-group col-md-3">
        <label asp-for="LectureId" style="font-weight:bold;">Ders</label>
        <select asp-for="LectureId" asp-items="ViewBag.Lectures" class="form-control">
            <option value="">-- Seçiniz --</option>
        </select>
        <span asp-validation-for="LectureId" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="Date" style="font-weight:bold;">Sınav Tarihi</label>
        <input asp-for="Date" type="date" class="form-control" placeholder="Tarih">
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="StartTime" style="font-weight:bold;">Başlangıç Saati</label>
        <input asp-for="StartTime" type="time" class="form-control" placeholder="Başlangıç Saati">
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="EndTime" style="font-weight:bold;">Bitiş Saati</label>
        <input asp-for="EndTime" type="time" class="form-control" placeholder="Bitiş Saati">
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary mt-3" >Kaydet</button>
</form>