@using exam_hall_seating.ViewModels.ExamVM;
@model CreateExamViewModel


<form method="post" asp-action="Create">
    
    <div class="form-group col-md-3">
        <label asp-for="LectureId">Ders</label>
        <select asp-for="LectureId" asp-items="ViewBag.Departments" class="form-control">
            <option value="">-- Seçiniz --</option>
        </select>
        <span asp-validation-for="LectureId" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="Date">Sınav Tarihi</label>
        <input asp-for="Date" type="date" class="form-control" placeholder="Tarih">
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="StartTime">Başlangıç Saati (00:00)</label>
        <input asp-for="StartTime" type="time" class="form-control" placeholder="Başlangıç Saati">
        <span asp-validation-for="StartTime" class="text-danger"></span>
    </div>
    <div class="form-group col-md-3">
        <label asp-for="EndTime">Bitiş Saati (00:00)</label>
        <input asp-for="EndTime" type="time" class="form-control" placeholder="Bitiş Saati">
        <span asp-validation-for="EndTime" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>