@{
    ViewData["Title"] = "Ders İşlemleri";
}
<h1>Ders CRUD işlemleri</h1>

@model IEnumerable<Lecture>
<a type="button" asp-controller="Lecture" asp-action="Create" class="btn btn-primary">Ders Ekle</a>
<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Ders Kodu</th>
            <th scope="col">Ders Adı</th>
            <th scope="col">Açıklama</th>
            <th scope="col">Yıl</th>
            <th scope="col">Dönem</th>
            <th scope="col">Bölüm</th>
            <th scope="col">İşlemler</th>

        </tr>
    </thead>
    <tbody>
        @{
            var i = 1;
        }
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@i</th>
                <td>@item.Code</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.Year</td>
                <td>@item.Period</td>
                <td>@item.Department.Name</td>
                <td>
                    <a type="button" asp-controller="Lecture" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Düzenle</a>
                    @*<button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#staticBackdrop">Sil</button>*@
                    <form method="post" action="/Lecture/Delete" onsubmit="return confirm('Dersi silmek istediğinize emin misiniz?');">
                        <input type="hidden" name="id" value="@item.Id" />
                        <button type="submit" class="btn btn-danger">Sil</button>
                    </form>
                </td>
            </tr>
            i++;
        }

        @*<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Dikkat</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        Dersi silmek istediğinize emin misiniz?
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">İptal</button>
                        <button type="button" class="btn btn-danger">Sil</button>
                    </div>
                </div>
            </div>
        </div>*@

    </tbody>
</table>